<?xml version="1.0" encoding="utf-8"?>
<!-- External Camera HAL 配置 for 小米9 -->
<ExternalCamera>
    <Provider>
        <!-- 忽略内部摄像头设备 (小米9有video0-2, video32-33) -->
        <ignore>
            <id>0</id>
            <id>1</id>
            <id>2</id>
            <id>32</id>
            <id>33</id>
        </ignore>
    </Provider>
    <Device>
        <!-- 外部摄像头设置 -->
        <MaxJpegBufferSize bytes="5242880"/>
        <NumVideoBuffers count="4"/>
        <NumStillBuffers count="2"/>
        <Orientation degree="0"/>
        <FpsList>
            <Limit width="1920" height="1080" fpsBound="30.0"/>
            <Limit width="1280" height="720" fpsBound="30.0"/>
            <Limit width="640" height="480" fpsBound="30.0"/>
        </FpsList>
    </Device>
</ExternalCamera>
